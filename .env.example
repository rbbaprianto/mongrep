# HRM Labs MongoDB Dashboard Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# SSH Configuration
SSH_PASSWORD=your_ssh_password_here
SSH_PRIVATE_KEY_PATH=/root/.ssh/id_rsa

# MongoDB Configuration
MONGODB_PORT=27017
REPLICA_SET_NAME=hrmlabsrs

# Node Configuration
MONGO_PRIMARY_HOST=hrmlabs-mongo-primary
MONGO_SECONDARY_HOST=hrmlabs-mongo-secondary
MONGO_ANALYTICS_HOST=hrmlabs-mongo-analytics

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Database Configuration
DB_CONNECTION_TIMEOUT=10000
DB_SERVER_SELECTION_TIMEOUT=5000
DB_MAX_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30